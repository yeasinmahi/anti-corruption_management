<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("দুর্নীতি দমন কমিশন", "Index", "Wings", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("উইং", "Index", "Wings")</li>
                    <li>@Html.ActionLink("সজেকা", "Index", "Sajekas")</li>
                    <li>@Html.ActionLink("কর্মকর্তা", "Index", "Employees")</li>
                    <li>@Html.ActionLink("মামলা", "Index", "Cases")</li>
                    <li>@Html.ActionLink("মামলার অভিযোগ", "Index", "CaseObjections")</li>
                    <li>@Html.ActionLink("তদন্তাধীন মামলার আসামি", "Index", "AccusedPersonInfoes")</li>
                    <li>@Html.ActionLink("অভিযোগকারীর তথ্য", "Index", "Accusers")</li>
                    <li>@Html.ActionLink("অনুসন্ধান অনুবিভাগ", "Index", "InquiryWorkProgresses")</li>
                    <li>@Html.ActionLink("তদন্ত অনুবিভাগ", "Index", "InvestigationWorkProgresses")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - দুর্নীতি দমন কমিশন . Powered by <a url="http://futuristictech.xyz/" target="_blank">Futuristic Technologies LTD</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
