@model AntiCorruptionManagementSystem.Models.Sajeka

@{
    ViewBag.Title = "Edit";
}

<h2>নিবন্ধন সম্পাদনা</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>সাজেকা</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Sl)
        <div class="form-group">
            @Html.LabelFor(model => model.WingId, " উইংয়ের নাম", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("WingId", null, "প্রধান উইংয়ের নাম পছন্দ করুন", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.WingId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, " সাজেকার নাম", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="সম্পান্দন" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("তালিকায় ফেরা", "Index")
</div>
