@model AntiCorruptionManagementSystem.Models.Case

@{
    ViewBag.Title = "মুছুন";
}

<h2>মুছুন</h2>

<h3>আপনি কি সত্যিই মুছতে চান?</h3>
<div>
    <h4>মামলার বিবরণ</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            উইং এর নাম
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Wings.Name)
        </dd>

        <dt>
            কর্মকর্তার নাম
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employees.Name)
        </dd>

        <dt>
            সজেকার নাম
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sajekas.Name)
        </dd>

        <dt>
           মামলার নম্বর
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CaseNumber)
        </dd>

        <dt>
            মামলার তারিখ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CaseDate)
        </dd>

        <dt>
            মামলার সংক্ষিপ্ত বিবরণ

        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            আই.ও কর্তৃক মামলা তদন্ত গ্রহনের তারিখ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateofIoTaken)
        </dd>

        <dt>
            তদন্ত প্রতিবেদনের জমাদানের হালনাগাদ অগ্রগতি
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProgressDetails)
        </dd>

        <dt>
            মন্তব্য
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Remarks)
        </dd>

        <dt>
            অ্যাকাউন্ট সচল ?
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="মুছুন" class="btn btn-default" /> |
            @Html.ActionLink("তালিকায় ফেরা", "Index")
        </div>
    }
</div>
